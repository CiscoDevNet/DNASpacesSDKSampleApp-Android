<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
              android:layout_height="wrap_content" android:background="@drawable/utility_layout_bg"
              android:layout_margin="15dp" android:orientation="vertical">


    <LinearLayout android:layout_width="match_parent" android:layout_height="1dp"
                  android:background="#E8E8E8"></LinearLayout>


    <TableLayout android:layout_width="match_parent" android:layout_height="wrap_content"  android:stretchColumns="0,1" android:layout_gravity="center_vertical" android:padding="10dp">
        <TableRow>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="Push Message" android:textSize="15sp" android:textColor="#888888"
                      android:textStyle="bold"/>
        </TableRow>
        <TableRow>

            <TextView
                    android:id="@+id/pushBody"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="One Plus 6"
                    android:textSize="15sp" />
        </TableRow>

    </TableLayout>
</LinearLayout>