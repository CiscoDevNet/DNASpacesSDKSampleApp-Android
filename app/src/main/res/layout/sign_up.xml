<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="0dp" android:gravity="center_horizontal"
            app:layout_constraintTop_toTopOf="parent">

        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/open_roaming" android:layout_gravity="center"
                   android:layout_marginTop="168dp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="@string/or" android:textColor="#1D3243" android:textSize="22.5sp"
                  android:fontFamily="sans-serif" android:layout_marginTop="10dp"/>
        <TextView android:layout_width="258dp" android:layout_height="wrap_content"
                  android:text="@string/or_desc" android:layout_gravity="center"
                  android:textColor="#39393B" android:textSize="14sp" android:gravity="center_horizontal" android:layout_marginTop="10dp"/>
        <ImageButton
                android:layout_marginTop="50dp" style="?android:borderlessButtonStyle"
                android:layout_width="wrap_content" android:layout_gravity="center"
                android:layout_height="wrap_content" android:id="@+id/google-sign-up"
                android:src="@drawable/signupwithgoogle"
                android:textAllCaps="false" android:clickable="true"
                android:textColor="@android:color/white"/>
        <ImageButton
                android:text="Sign Up with Apple" android:layout_marginTop="10dp" style="?android:borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:src="@drawable/signinwithapple"
                android:layout_height="wrap_content" android:id="@+id/apple-sign-up"
                android:textAllCaps="false" android:textColor="@android:color/white"/>

        <!--<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Sign In Instead"
        android:id="@+id/sign-in-text" android:clickable="true" android:textColor="#049FD9"/>-->

        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/cisco_logo" android:layout_gravity="center"
                   android:layout_marginTop="127dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>